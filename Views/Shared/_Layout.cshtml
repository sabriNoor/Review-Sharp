<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ReviewSharp</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ReviewSharp.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="rs-header shadow-sm">
        <div class="container d-flex align-items-center justify-content-between py-3">
            <a class="navbar-brand d-flex align-items-center gap-2" asp-area="" asp-controller="CodeReview" asp-action="Upload">
                <span class="rs-logo">RS</span>
                <span class="fw-semibold">ReviewSharp</span>
            </a>
            <nav class="d-flex align-items-center gap-3">
                <a class="nav-link" asp-area="" asp-controller="CodeReview" asp-action="Upload">Upload</a>
                <a class="btn btn-primary" asp-area="" asp-controller="CodeReview" asp-action="Upload">New Review</a>
            </nav>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ReviewSharp
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
