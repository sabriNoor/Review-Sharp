@{
    ViewBag.Title = "Upload C# File";
}
<h2>Upload C# Source File</h2>
<form asp-action="UploadFile" method="post" enctype="multipart/form-data">
    <input type="file" name="file" accept=".cs" required />
    <button type="submit">Upload & Review</button>
</form>
@if (ViewBag.Error != null)
{
    <div style="color:red">@ViewBag.Error</div>
}
